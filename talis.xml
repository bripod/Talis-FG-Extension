				<frame name="fieldlight" offset="7,5,7,5"/>
			</simplenumber>
			<label name="sp">
				<anchored to="CP_in_pot" position="insidetopleft" offset="0,20" width="25" height="25"/>
				<static>cp</static>
				<center />
			</label>
			<label_charfieldtop>
				<anchored to="card3" offset="0,-160" width="90"/>
				<static>Total In Pot</static>
				<center/>
			</label_charfieldtop>
			

