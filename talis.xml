			</simplenumber>
			<label name="sp">
				<anchored to="CP_already_bet" position="insidetopleft" offset="0,20" width="25" height="25"/>
				<static>cp</static>
				<center />
			</label>
			<label_charfieldtop>
				<anchored to="card1" offset="0,-160" width="90"/>
				<static>Already Bet</static>
				<center/>
			</label_charfieldtop>
			
			<simplenumber name="hand_total">
				<anchored to="card2" position="insidetopleft" offset="0,165" width="80" height="25"/>
				<frame name="fieldlight" offset="7,5,7,5"/>
				<readonly/>
			</simplenumber>
			<label_charfieldtop>
				<anchored to="hand_total" offset="0,5" width="80"/>
				<static>Hand Total</static>
			</label_charfieldtop>
			<!--
			Ideally the "total in pot" section will grab values from DB nodes like talis.potGP, talis.potSP, talis.potCP instead of creating three pot-total nodes for each player
			-->
