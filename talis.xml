					<right offset="-30" />
				</anchored>
				<target>list</target>
				<script>
					function onValueChanged()
						local bEditMode = (getValue() == 1);
						window.table_iadd_row.setVisible(bEditMode);
						window.seats.update();
					end
				</script>
