<root>
	<template name="anchor_title_talis">
		<genericcontrol>
			<anchored height="0">
				<top offset="35" />
				<left parent="" anchor="left" offset="15" />
				<right parent="" anchor="right" offset="-15" />
			</anchored>
			<disabled />
		</genericcontrol>
	</template> 
	
	<windowclass name="talis_client">
		<frame>partysheet</frame>
		<placement>
			<size width="500" height="600"/>
		</placement>
		<noresize/>
		<minimize>minimized_npc</minimize>
		<nodelete/>
		<sheetdata>
			<windowtitlebar name="talisTitle">
				<resource>talisTableTitle</resource>
			</windowtitlebar>
			<anchor_title_talis name="contentanchor"/>
			<!-- much of this can probably/should probably be based on windowclasses or windowlists, but I haven't been able to get those to work yet -->
			<label_charframetop name="card1">
				<anchored height="125" position="belowleft" width="80">
					<top parent="contentanchor" anchor="top" relation="relative" offset="75"/>
					<left offset="75"/>
				</anchored>
				<font>reference-b-large</font>
				<static>1d8</static>
			</label_charframetop>
			<label_charframetop name="card2">
				<anchored to="card1" height="125" position="right" width="80" offset="50"/>
				<font>reference-b-large</font>
				<static>1d6</static>
			</label_charframetop>
			<label_charframetop name="card3">
				<anchored to="card2" height="125" position="right" width="80" offset="50"/>
				<font>reference-b-large</font>
				<static>1d4</static>
			</label_charframetop>
			
			<button_roll name="card1_button">
				<anchored to="card1" position="insidetopleft" offset="25,15" width="30" height="30"/>
				<script name="TalisRoll" file="scripts/utility_talis_roll.lua"/>
			</button_roll>
			<button_roll name="card2_button">
				<anchored to="card2" position="insidetopleft" offset="25,15" width="30" height="30"/>
				<script name="TalisRoll" file="scripts/utility_talis_roll.lua"/>
			</button_roll>
			<button_roll name="card3_button">
				<anchored to="card3" position="insidetopleft" offset="25,15" width="30" height="30"/>
				<script name="TalisRoll" file="scripts/utility_talis_roll.lua"/>
			</button_roll>
			
			<numberfield name="card1_value">
				<anchored to="card1" position="insidetopleft" offset="25,90" width="30" height="25"/>
				<frame name="fieldlight" offset="7,5,7,5"/>
				<font>reference-b-large</font>
			</numberfield>
			<numberfield name="card2_value">
				<anchored to="card2" position="insidetopleft" offset="25,90" width="30" height="25"/>
				<frame name="fieldlight" offset="7,5,7,5"/>
				<font>reference-b-large</font>
			</numberfield>
			<numberfield name="card3_value">
				<anchored to="card3" position="insidetopleft" offset="25,90" width="30" height="25"/>
				<frame name="fieldlight" offset="7,5,7,5"/>
				<font>reference-b-large</font>
			</numberfield>
			
			<simplenumber name="GP_already_bet">
				<anchored to="card1" position="insidetopleft" offset="-5,165" width="25" height="25"/>
				<frame name="fieldlight" offset="7,5,7,5"/>
			</simplenumber>
			<label name="gp">
				<anchored to="GP_already_bet" position="insidetopleft" offset="0,20" width="25" height="25"/>
				<static>gp</static>
				<center />
			</label>
			<simplenumber name="SP_already_bet">
				<anchored to="GP_already_bet" position="insidetopleft" offset="33,0" width="25" height="25"/>
				<frame name="fieldlight" offset="7,5,7,5"/>
			</simplenumber>
			<label name="sp">
				<anchored to="SP_already_bet" position="insidetopleft" offset="0,20" width="25" height="25"/>
				<static>sp</static>
				<center />
			</label>
			<simplenumber name="CP_already_bet">
				<anchored to="SP_already_bet" position="insidetopleft" offset="32,0" width="25" height="25"/>
